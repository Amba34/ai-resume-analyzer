# Example production environment variables for Backend
# Copy this to .env and fill in your actual values

# Server Configuration
PORT=3000
NODE_ENV=production

# Frontend URL (comma-separated for multiple origins)
# Update this with your deployed frontend URL
FRONTEND_URL=https://your-frontend-domain.vercel.app,https://www.your-domain.com

# MongoDB Configuration
# Get this from MongoDB Atlas or your MongoDB provider
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/ai-resume-analyzer?retryWrites=true&w=majority

# OpenAI API Key
# Get from https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your-openai-api-key-here

# Google Cloud Vision API (optional, for OCR)
# Path to your service account JSON file
GOOGLE_APPLICATION_CREDENTIALS=./gen-lang-client-0514898714-71b9c5ae081a.json

# Rate Limiting (optional)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
